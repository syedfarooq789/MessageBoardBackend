{
  "compilerOptions": {
    "module": "commonjs",
    "declaration": false,
    "noImplicitAny": true,
    "removeComments": true,
    "noLib": false,
    "strict": true,
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "target": "ES2022",
    "sourceMap": true,
    "allowJs": true,
    "outDir": "./dist",
    "strictNullChecks": true,
    "noUnusedLocals": true,
    "baseUrl": "./",
    "types": ["jest", "node"]
  },
  "include": ["src/**/*", "auto.migrate.ts"],
  "exclude": ["node_modules"]
}
